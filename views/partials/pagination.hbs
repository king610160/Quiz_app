<div class="d-flex flex-rows justify-content-center">
    <nav class="mt-3" aria-label="page navigation">
        <ul class="pagination">
        <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
            <a class="page-link" href="/{{pgsetting}}?page={{pagination.prev}}{{#if search}}&search={{search}}{{/if}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{#each pagination.pages}}
            {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="/{{../pgsetting}}?page={{this}}{{#if ../search}}&search={{../search}}{{/if}}">{{this}}</a>
            </li>
            {{/ifCond}}
        {{/each}}
        <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
            <a class="page-link" href="/{{pgsetting}}?page={{pagination.next}}{{#if search}}&search={{search}}{{/if}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        </ul>
    </nav>
</div>