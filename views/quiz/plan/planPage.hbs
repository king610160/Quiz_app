{{!-- display your test plan, can search other's plan or quiz to add to your plan --}}

<div class="w-100 mt-3">
    <h1 class="mb-5">Create Plan</h1>
    <div class="d-flex flex-row mb-3 justify-content-between">
        <form action="/plan" method="POST">
            <div class="d-flex flex-row mx-2">
                <div class="col-auto mx-2">
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter folder name" value="" aria-describedby="nameHelp" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">Create folder</button>
                </div>
            </div>
        </form>
        <div class="col-auto mx-3">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {{#if user.Plan}}
                        Default Folder : {{user.Plan.name}}
                    {{else}}
                        Dropdown button
                    {{/if}}
                </button>
                <ul class="dropdown-menu">
                    {{#each plan}}
                    <form action="/plan/defaultFolder/{{this.id}}" method="POST">
                        <li><button class="dropdown-item" type="submit">{{this.name}}</button></li>
                    </form>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="w-100">
    <hr class="border border-dark border-1">
</div>

<div class="d-flex flex-row flex-wrap justify-content-between w-100">
{{#each plan}}
    <div class="card p-2 m-3" style="width: 18rem;">
        <div class="card-body">
            <h3 class="card-title">{{this.name}}</h5>
            <br>
            <br>
            <div class="d-flex justify-content-end">
                <a href="/plan/{{this.id}}" class="icon btn btn-secondary mx-1">
                    <i class="fa-solid fa-eye"></i>
                </a>
                <a href="#" class="icon btn btn-primary mx-1">
                    <i class="fa-regular fa-pen-to-square"></i>
                </a>
                <form action="/plan/{{this.id}}?_method=DELETE" method="DELETE">
                    <a href="#" class="icon btn btn-danger mx-1">
                        <i class="fa-regular fa-trash"></i>
                    </a>
                </form>
            </div>
        </div>
    </div>
{{/each}}
</div>
