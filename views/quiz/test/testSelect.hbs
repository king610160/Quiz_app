<div class="w-50 bg-secondary text-white p-5 d-flex flex-column justify-content-center align-items-center">
    <h1 class="mb-1">Test Setting</h1>
    <div class="w-100 mt-3 p-5">
        <form action="/quiz/test">
            <div class="mb-4">
                <label for="category" class="form-label">Category</label>
                <input type="text" class="form-control" id="category" name="category" placeholder="select category" aria-describedby="categoryHelp">
            </div>

            <div class="mb-4">
                <label for="totalQuestion" class="form-label">Total question</label>
                <input type="text" class="form-control" id="totalQuestion" name="totalQuestion" placeholder="totalQuestion" aria-describedby="totalQuestionHelp">
            </div>
            <div class="d-flex justify-content-center align-items-center mt-5">
                <button type="submit" class="btn btn-primary w-100">Start</button>
            </div>
        </form>
    </div>
</div>