<div class="w-100">
  <div class="container d-flex flex-row align-items-center mb-2">
    <h1 class="me-5">Your Quiz!</h1>
    <a href="/quiz/create">
        <button type="submit" class="btn btn-primary">Create Quiz</button>
    </a>
  </div>
  <br>

  <table class="table align-middle">
  <thead class="table-dark">
      <tr>
      <th scope="col">Id</th>
      <th scope="col">Question</th>
      <th scope="col">Manipulate</th>
      </tr>
  </thead>
  <tbody>
      {{#each quiz}}
      <tr class="mb-3 align-items-center">
          <th scope="row">{{inc @index}}</th>
          <th scope="row">
            <p class="d-inline-flex gap-1">
              <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample{{this.id}}" role="button" aria-expanded="false" aria-controls="collapseExample">
                {{this.question}}
              </a>
            </p>
            <div class="collapse" id="collapseExample{{this.id}}">
                {{#if select1}}
                  <div class="card card-body {{this.id}} select1 {{#if select1true}}bg-secondary text-white{{/if}}">
                    {{this.select1}}
                  </div>
                {{/if}}
                {{#if select2}}
                  <div class="card card-body {{this.id}} select2 {{#if select2true}}bg-secondary text-white{{/if}}">
                    {{this.select2}}
                  </div>
                {{/if}}
                {{#if select3}}
                  <div class="card card-body {{this.id}} select3 {{#if select3true}}bg-secondary text-white{{/if}}">
                    {{this.select3}}
                  </div>
                {{/if}}
                {{#if select4}}
                  <div class="card card-body {{this.id}} select4 {{#if select4true}}bg-secondary text-white{{/if}}">
                    {{this.select4}}
                  </div>
                {{/if}}
            </div>
          </th>
          <th scope="row">
              <div class="d-flex flex-row t-25">
                <form action="/quiz/{{this.id}}" class="me-3">
                    <button type="submit" class="btn btn-success">
                      <i class="fa-regular fa-pen-to-square"></i>
                    </button>
                </form>

                <form action="/quiz/{{this.id}}?_method=DELETE" method="POST" class="me-3">
                    <button type="submit" class="btn btn-danger">
                      <i class="fa-regular fa-trash"></i>
                    </button>
                </form>

                <form action="/user/collect/{{this.id}}" method="POST" class="me-3">
                    <button type="submit" class="btn btn-secondary fw-bold">ÂçÅ</button>
                </form>
              </div>
          </th>
      </tr>
      {{/each}}
  </tbody>
  </table>

  <div class="d-flex flex-rows justify-content-center">
    <nav class="mt-3" aria-label="page navigation">
        <ul class="pagination">
        <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
            <a class="page-link" href="/quiz?page={{pagination.prev}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{#each pagination.pages}}
            {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="/quiz?page={{this}}">{{this}}</a>
            </li>
            {{/ifCond}}
        {{/each}}
        <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
            <a class="page-link" href="/quiz?page={{pagination.next}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        </ul>
    </nav>
  </div>
</div>
