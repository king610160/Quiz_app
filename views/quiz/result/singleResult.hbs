<div class="d-flex flex-row w-100 justify-content-between align-items-end">
  <h1>Detail</h1>
  <h3 class="single-result-score ms-5">Your Score : {{score.score}}</h3>
</div>
<br>
<div class="w-100">
  <table class="table align-middle">
  <thead class="table-dark">
      <tr>
      <th scope="col">Id</th>
      <th scope="col">Question</th>
      </tr>
  </thead>
  <tbody>
      {{#each quiz}}
      <tr class="mb-3 align-items-center">
          <th scope="row">{{inc @index}}</th>
          <th scope="row">
            <p class="d-inline-flex gap-1">
              <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample{{this.id}}" role="button" aria-expanded="false" aria-controls="collapseExample">
                {{this.question}}
              </a>
            </p>
            <div class="collapse" id="collapseExample{{this.id}}">
                {{#if select1}}
                  <div class="card card-body {{this.id}} select1  {{#if userSelect1}}bg-danger text-white{{/if}} {{#if select1true}}bg-secondary text-white{{/if}}">
                    {{this.select1}}
                  </div>
                {{/if}}
                {{#if select2}}
                  <div class="card card-body {{this.id}} select2 {{#if userSelect2}}bg-danger text-white{{/if}} {{#if select2true}}bg-secondary text-white{{/if}}">
                    {{this.select2}}
                  </div>
                {{/if}}
                {{#if select3}}
                  <div class="card card-body {{this.id}} select3 {{#if userSelect3}}bg-danger text-white{{/if}} {{#if select3true}}bg-secondary text-white{{/if}}">
                    {{this.select3}}
                  </div>
                {{/if}}
                {{#if select4}}
                  <div class="card card-body {{this.id}} select4 {{#if userSelect4}}bg-danger text-white{{/if}} {{#if select4true}}bg-secondary text-white{{/if}}">
                    {{this.select4}}
                  </div>
                {{/if}}
            </div>
          </th>
      </tr>
      {{/each}}
  </tbody>
  </table>
</div>
