<div class="d-flex flex-column justify-content-start w-100">
    <h1>Score page</h1>
    {{#each score}}
        <div class="card d-flex flex-column w-90 border-dark m-3 p-1">
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
                <div>
                    <div>
                        Test : 
                        {{#if this.Plan.name}}
                            {{this.Plan.name}}
                        {{else}}
                            This test had already deleted.    
                        {{/if}}        
                    </div>
                </div>
                <div class="score-time d-flex flex-rows justify-content-between align-items-center">
                    <div class="d-flex flex-row justify-content-between flex-grow-1 me-5">
                        <div>Time : {{relativeTimeFromNow this.createdAt}}</div>
                        <div>Score : {{this.score}}</div>
                    </div>
                    <a href="/result/{{this.id}}" class="icon btn btn-dark mx-2">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <form action="/result/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-regular fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{#if display}}
    {{>pagination}}
{{/if}}