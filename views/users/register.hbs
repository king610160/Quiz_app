<div class="container w-50 vh-90 p-5 bg-secondary text-light rounded shadow login-container">
    <form class="form-register" action="/users/register" method="POST">
        <h1>Register</h1>

        <label for="name" class="form-label mt-3 mb-2">Name</label>
        <input class="form-control" name="name" id="name" type="text" placeholder="Please enter your name" aria-label="name" required>

        <label for="email" class="form-label mt-3 mb-2">Email</label>
        <input class="form-control" name="email" id="email" type="text" placeholder="Please enter your email" aria-label="email" required>

        <label for="password" class="form-label mt-3 mb-2">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Please enter your password" aria-label="password" required>
        <div id="passwordHelpBlock" class="form-text text-light">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div>

        <label for="comfirmPassword" name="comfirmPassword" class="form-label mt-3 mb-2">Comfirm Password</label>
        <input type="password" name="comfirmPassword" id="comfirmPassword" class="form-control" placeholder="Please enter your password" aria-label="comfirmPassword" required>

        <div class="d-flex flex-rows mt-4 align-items-center">
            <button class="btn btn-primary" type="submit">Register</button>
            <div class="ms-5">  
                <a href="/users/login">Login</a>
            </div> 
        </div>
    </form>
</div>