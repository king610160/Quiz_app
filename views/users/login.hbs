<div class="container w-50 p-5 bg-secondary text-light rounded shadow login-container">
    <form class="form-login" action="/users/login" method="POST">
        <h1>Login</h1>

        <label for="email" class="form-label mt-3 mb-2">Email</label>
        <input class="form-control" name="email" id="email" type="text" placeholder="Please enter your email" aria-label="default input example" required>

        <label for="password" class="form-label mt-3 mb-2">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Please enter your password" aria-describedby="passwordHelpBlock" required>
        <div id="passwordHelpBlock" class="form-text text-light">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div>
        
        <div class="d-flex flex-column mt-4 align-items-center">
            <div class="d-flex flex-row w-100">
                <button class="btn btn-primary mb-3 me-5" type="submit">Login</button>
                <a href="/auth/facebook" class="mb-3 icon">
                    <i class="fa-brands fa-square-facebook fa-2xl"></i>
                </a>
            </div>
            <div class="d-flex flex-rows w-100"> 
                <p class="me-3">Have no acoount?</p> 
                <a href="/users/register" id="register">Register</a>
            </div> 
        </div>
    </form>
</div>

